<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ModernArtActivity">

    <TextView
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:text=""
        android:id="@+id/topLeftBox"
        android:layout_alignParentLeft="true"
        android:focusableInTouchMode="true"
        android:background="#ffffca2b" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:text=""
        android:id="@+id/topMiddleBox"
        android:layout_toRightOf="@+id/topLeftBox"
        android:focusableInTouchMode="true"
        android:background="#ff5871ff" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text=""
        android:id="@+id/topRightBox"
        android:layout_toRightOf="@+id/topMiddleBox"
        android:focusableInTouchMode="true"
        android:background="#ffff3a1e" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text=""
        android:id="@+id/secondLeftBox"
        android:layout_below="@+id/topLeftBox"
        android:focusableInTouchMode="true"
        android:background="#ff59fff6" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text=""
        android:id="@+id/secondEmbeddedWhiteBox"
        android:layout_alignBottom="@+id/secondLeftBox"
        android:focusableInTouchMode="true"
        android:background="#ffffffff" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:text=""
        android:id="@+id/thirdLeftBox"
        android:layout_below="@+id/secondLeftBox"
        android:focusableInTouchMode="true"
        android:background="#ffff1d83" />
    <TextView
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:text=""
        android:id="@+id/thirdRightBox"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/secondLeftBox"
        android:focusableInTouchMode="true"
        android:background="#ffffcf72" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seeker"
        android:layout_below="@+id/thirdLeftBox" />

</RelativeLayout>
